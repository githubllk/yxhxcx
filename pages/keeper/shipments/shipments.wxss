
.main-list {
    display: flex;
    height: 256rpx;
    color: #242424;
}

.main-left{
    margin-left: 30rpx;
    margin-top: 30rpx;
    margin-right: 20rpx;
}
.main-right{
    margin-top: 30rpx;
}

.main-left image {
    width: 196rpx;
    height: 196rpx;
}

.attr-g {
    margin-left: 30rpx;
}

.attr-piece {
    color: #B79547;
    margin-left: 30rpx;
}

/* 超出隐藏 显示省略号 */
.main-title {
    width: 480rpx;
    font-size: 30rpx;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    word-break: break-all;
}

.main-attr {
    display: flex;
    font-size: 28rpx;
    color: #A3A3A3;
    margin-top: 30rpx;
}

.main-stock {
    display: flex;
    padding: 0 30rpx 0 30rpx;
    height: 102rpx;
    justify-content: space-between;
    font-size: 28rpx;
    line-height: 102rpx;
    border-top: 2rpx solid #F5F5F5;
}
.left {
    margin: 0 30rpx 0 30rpx;
    line-height: 120rpx;
}

.left image {
    width: 44rpx;
    height: 44rpx;
}

.addr{
    display: flex;
    height: 120rpx;
    margin-top: 22rpx;
}
.top {
    display: flex;
    justify-content: space-between;
    margin-right: 30rpx;
}

.top .sk {
    color: #B79547;
    font-weight: 500;
}

.top .time {
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(163, 163, 163, 1);
}

.down {
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
}

.right1 {
    margin-top: 16rpx;
    width: 100%;
    color: rgba(36, 36, 36, 1);
    font-size: 28rpx;
}

.right1 .top1 {
    display: flex;
}

.mobile {
    margin-left: 80rpx;
}

.addr {
    font-size: 24rpx;
    color: rgba(163, 163, 163, 1);
}


.stock-sel{
    display: flex;
    height: 90rpx;
    width: 100%;
    justify-content: space-between;
    line-height: 90rpx;
    border-top: 2rpx solid #F5F5F5;
    border-bottom: 2rpx solid #F5F5F5;
    font-size: 28rpx;
}
.stock-left{
    margin-left: 30rpx;
    color: #666666;
}
.stock-right{
    color: #BDBDBD;
    display: flex;
    align-items: center;
    font-size: 28rpx;
}
.stock-right text {
    margin-right: 10rpx;
}
.stock-right image {
    height: 25rpx;
    width: 25rpx;
    margin-right: 30rpx;
}

.stock-right input{
    min-width: 100rpx;
    height: 100rpx;
    margin-right: 30rpx;
    text-align: right;
}
.foot {
    font-size: 32rpx;
    color: #fff;
    background-image: linear-gradient(to right, #bda54f, #9e722d);
    height: 98rpx;
    line-height: 98rpx;
    text-align: center;
    bottom: 170rpx;
    position: fixed;
    width: 630rpx;
    border-radius: 8rpx;
    margin-left: 60rpx;
}