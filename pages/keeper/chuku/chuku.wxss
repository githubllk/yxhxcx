/* pages/keeper/chuku/chuku.wxss */
.r-header {
    width: 100%;
    height: 90rpx;
    display: flex;
    justify-content: space-evenly;
    line-height: 90rpx;
    font-size: 28rpx;
    color: #BDBDBD;
}

.act {
    border-bottom: 2;
    padding-bottom: 26rpx;
    color: #b79547;
    border-bottom: 6rpx solid;
    border-bottom-color: linear-gradient(to right, #bda54f, #9e722d);
    border-radius: 4rpx;
}

.main-list {
    display: flex;
    margin-top: 30rpx;
    height: 226rpx;
    padding-top: 30rpx;
    color: #242424;
}

.main-left {
    margin-left: 30rpx;
    margin-right: 20rpx;
}

.main-left image {
    width: 196rpx;
    height: 196rpx;
}

/* 
.main-right {
    width: 480rpx;

} */
.attr-g {
    margin-left: 30rpx;
}

.attr-piece {
    color: #B79547;
    margin-left: 30rpx;
}

/* 超出隐藏 显示省略号 */
.main-title {
    width: 480rpx;
    font-size: 30rpx;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    word-break: break-all;
}

.main-attr {
    display: flex;
    font-size: 28rpx;
    color: #A3A3A3;
    margin-top: 30rpx;
    position: relative;
}

.main-stock {
    display: flex;
    padding: 0 30rpx 0 30rpx;
    height: 102rpx;
    justify-content: space-between;
    font-size: 28rpx;
    line-height: 102rpx;
    border-top: 2rpx solid #F5F5F5;
}

.r-btn {
    height: 54rpx;
    width: 154rpx;
    border-radius: 8rpx;
    border: 2rpx solid rgba(183, 149, 71, 1);
    line-height: 54rpx;
    text-align: center;
    color: rgba(183, 149, 71, 1);
    right: 30rpx;
    font-size: 24rpx;
    position: absolute;
}



.main-attr.down {
    align-items: center;
    margin-top: 38rpx;
}