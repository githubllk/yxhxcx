/* 选择组件 */
.picker-view {
  height: 376rpx;
  width: 100%;
}

picker-view {
  background-color: #fff;
  padding: 0;
  width: 100%;
  height: 376rpx;
  bottom: 0;
  position: fixed;
  z-index: 9999;
}

picker-view-column view {
  vertical-align: middle;
  font-size: 34rpx;
  line-height: 24rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.shadow {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0rpx;
  background-color: #0000004D;
}

.textarea {
  padding: 20rpx 0 0 30rpx;
  margin-top: 20rpx;
  color: #666;
}

.editor_area {
  margin: 20rpx 0 20rpx;
  width: 690rpx;
  padding-top: 10rpx;
  background-color: #F7F7F7;
  height: 240rpx;
}
/* editor 样式 */
.ql-container {
  box-sizing: border-box;
  font-size: 28rpx;
  overflow: auto;
  padding: 20rpx 0 0 20rpx;
  min-height: 240rpx;
}

.textarea-main {
  border-radius: 8rpx;
  background: rgba(247, 247, 247, 1);
  margin-top: 20rpx;
  position: relative;
  height: auto;
}
.editor-image{
  position: absolute;
  right: 50rpx;
  bottom: 20rpx;

}
.foot {
  font-size: 32rpx;
  color: #fff;
  background-image: linear-gradient(to right, #bda54f, #9e722d);
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  width: 100%;
  bottom: 0rpx;
}