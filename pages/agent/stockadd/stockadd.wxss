/* pages/agent/stockadd/stockadd.wxss */
.main{
    background-color: #fff;
}
.main-list{
    margin: 0 30rpx 0 30rpx;
}
.stock-sel{
    display: flex;
    height: 90rpx;
    width: 100%;
    justify-content: space-between;
    line-height: 90rpx;
    border-top: 2rpx solid #F5F5F5;
    border-bottom: 2rpx solid #F5F5F5;
}
.stock-left{
    color: #666666;
}
.stock-right{
    color: #BDBDBD;
    display: flex;
    align-items: center;
    font-size: 28rpx;
}
.stock-right image {
    height: 25rpx;
    width: 25rpx;
    margin-left: 15rpx;
}
.foot{
    font-size: 32rpx;
    color: #fff;
    background-image: linear-gradient(to right, #bda54f, #9e722d);
    height: 98rpx;
    line-height: 98rpx;
    text-align: center;
    position: fixed;
    bottom: 0rpx;
    width: 100%;
}
.stock-right input{
    width: 100rpx;
    margin-right: 25rpx;
}
.picker-view{
    height: 376rpx;
    width: 100%;
}

picker-view {
    background-color: #fff;
    padding: 0;
    width: 100%;
    height: 376rpx;
    bottom: 0;
    position: fixed;
    z-index: 9999;
  }
  
  picker-view-column view {
    vertical-align: middle;
    font-size: 34rpx;
    line-height: 24rpx;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .shadow{
      width:100%;
      height: 100%;
      position: fixed;
      top: 0rpx;
      background-color: #0000004D;
  }

  .goodsel {
    width: 300rpx;
    text-align:right;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis; 
  }