<view class="header">
	<scroll-view class="scroll-view_H" scroll-x="true">
		<view class="classify">
			<view wx:for="{{option_list}}" wx:key="key" class="classify-son {{option_active == index?'act':''}}" bindtap="option_select" data-num="{{index}}">{{item.name}}</view>
		</view>
	</scroll-view>
	<view class="right">
		<image src="/pages/images/xiangxia.png"></image>
	</view>
</view>
<view class="main" wx:for="{{goodlist}}" wx:key="key">
	<view class="good-top">
		<view class="good-left">
			<image src="{{item.image}}"></image>
		</view>
		<view class="good-right">
			<text class="title">{{item.good_name}}</text>
			<text class="pieces">{{item.pieces}}件</text>
			<text class="price">¥{{item.price}}</text>
		</view>
	</view>
	<view class="good-button">
		<view class="good-edit bor color-b7">编辑</view>
		<view class="good-shangjia bor {{item.status==1?'color-b7':'color-a3'}}" bindtap="jiabind" data-goodid="{{item.id}}" data-index="{{index}}">{{item.status==1?'上架':'下架'}}</view>
		<view class="good-del bor color-a3" bindtap="delbid">删除</view>
	</view>
</view>
