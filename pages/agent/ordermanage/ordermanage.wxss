/* pages/agent/ordermanage/ordermanage.wxss */
page{
    font-size: 28rpx;
}
.header {
    margin-top: 2rpx;
    display: flex;
    justify-content: space-around;
    padding-top: 24rpx;
}
.white-bgc{
    background-color: #fff;
}
.subnav {
    color: #bdbdbd;
    line-height: 40rpx;
    text-align: center;
    width: 88rpx;
}

.subnav.act {
    padding-bottom: 26rpx;
    color: #b79547;
    border-bottom: 6rpx solid;
    border-bottom-color: linear-gradient(to right, #bda54f, #9e722d);
    border-radius: 4rpx;
}
.order-sn{
    width: 100%;
    height: 82rpx;
    line-height: 82rpx;
    margin-top: 20rpx;
    color: #A3A3A3;
    font-size: 24rpx;
    padding-left: 30rpx;
}
.main-list {
    display: flex;
    margin-top: 2rpx;
    height: 194rpx;
    padding-top: 30rpx;
    color: #242424;
}

.main-left {
    margin-left: 30rpx;
    margin-right: 20rpx;
}

.main-left image {
    width: 164rpx;
    height: 164rpx;
}

.main-right {
    width: 480rpx;

}

/* 超出隐藏 显示省略号 */
.main-title {
    width: 480rpx;
    font-size: 30rpx;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    word-break: break-all;
}

.main-attr {
    display: flex;
    color: #A3A3A3;
    margin-top: 20rpx;
    font-size:26rpx;
}
.main-attr.bom{
    justify-content: space-between;   
}
.price{
    font-size: 32rpx;
    color:#F63256;
}
.num{
    color: #242424;
}

.main-stock {
    display: flex;
    padding: 0 30rpx 0 30rpx;
    height: 102rpx;
    justify-content: space-between;
    line-height: 102rpx;
    border-top: 2rpx solid #F5F5F5;
}
.attr-g{
    margin-left: 30rpx;
}
.order-btn{
    display: flex;
    padding:2rpx 30rpx 0 382rpx;
    height: 102rpx;
    align-items: center;
    /* justify-content: space-around; */
}
.order-btn1{
    display: flex;
    height: 102rpx;
    align-items: center;
    padding:0 30rpx 0 30rpx;
    justify-content:space-between;
}

.o-btn{
    width: 154rpx;
    height: 54rpx;
    border-radius: 8rpx;
    font-size: 24rpx;
    line-height: 54rpx;
    text-align: center;
}
.cancle{
    color:rgba(102,102,102,1);
    border:2rpx solid rgba(163,163,163,1);
}
.affirm{
    border:2rpx solid rgba(183,149,71,1);
    color:rgba(183,149,71,1);
    margin-left: 30rpx;
}
.entrepot{
    color:rgba(51,51,51,1);
}
.order-status{
    color:rgba(163,163,163,1);
}