/* pages/agent/index/index.wxss */

page {
  background-color: #f9f9f9;
}

.header {
  display: flex;
  margin-top: 20rpx;
}

.btn {
  background-color: #fff;
  margin-left: 22rpx;
  width: 220rpx;
  height: 220rpx;
  display: flex;
  align-items: center;
  /*垂直居中*/
  justify-content: center;
  /*水平居中*/
  flex-direction: column;
}

.btn text {
  margin-top: 22rpx;
}

.btn image {
  width: 60rpx;
  height: 56rpx;
}

.btn .dingdan {
  width: 56rpx;
  height: 60rpx;
}

.nav {
  display: flex;
  margin-top: 20rpx;
  background-color: #fff;
  /* height: 90rpx; */
  justify-content: space-around;
  padding-top: 24rpx;
}

.subnav {
  color: #bdbdbd;
  font-size: 28rpx;
  line-height: 40rpx;
  text-align: center;
  width: 88rpx;
}

.subnav.act {
  padding-bottom: 26rpx;
  color: #b79547;
  border-bottom: 6rpx solid;
  border-bottom-color: linear-gradient(to right, #bda54f, #9e722d);
  border-radius: 4rpx;
}

.statistics {
  margin-top: 2rpx;
  background-color: #fff;
}

.turnover {
  height: 128rpx;
  display: flex;
  text-align: center;
  justify-content: space-around;
}

.turnover-son {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}

.main-gross {
  display: flex;
  border-top: 2rpx solid #f5f5f5;
  text-align: center;
  height: 130rpx;
  width: 690rpx;
  margin-left: 30rpx;
}

.main-gross-son {
  display: flex;
  flex-direction: column;
  width: 374rpx;
  justify-content: center;
}

.gross-right {
  border-right: 2rpx solid #f5f5f5;
}

.statistics-bottom {
  display: flex;
  color: #666;
  margin-top: 20rpx;
  border-radius: 10rpx;
}

.statistics-bottom .btn {
  height: 160rpx;
  width: 220rpx;
}

.dealer-statistics {
  display: flex;
  margin-left: 30rpx;
  margin-top: 20rpx;
  background-color: #fff;
  width: 690rpx;
  height: 100rpx;
  align-content: center;
  line-height: 100rpx;
  flex-direction: row;
  justify-content: space-between;
  color: #666;
  font-size: 28rpx;
}

.btn1 {
  margin-left: 30rpx;
}

.btn2 {
  margin-right: 28rpx;
  height: 28rpx;
}

.dealer-statistics image {
  width: 22rpx;
  padding-top: 10rpx;
  height: 22rpx;
  line-height: 28rpx;
}

.dealer-statistics .btn2 text {
  margin-right: 10rpx;
}

.customtime {
  display: flex;
  height: 100rpx;
  align-content: center;
  background-color: #fff;
  color: #a3a3a3;
  padding-top: 20rpx;
}

.customtime text {
  margin: 0 10rpx 0 10rpx;
  font-size: 24rpx;
}

.customtime .picker-view {
  width: 200rpx;
  height: 60rpx;
  background-color: #f7f7f7f7;
  border-radius: 8rpx;
  font-size: 28rpx;
  padding-left: 20rpx;
  line-height: 60rpx;
}

/* .pickertime-bottom {
} */

picker-view {
  background-color: #fff;
  padding: 0;
  width: 100%;
  height: 376rpx;
  bottom: 0;
  position: fixed;
  z-index: 9999;
}

picker-view-column view {
  vertical-align: middle;
  font-size: 34rpx;
  line-height: 24rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
