/* pages/agent/stocklog/stocklog.wxss */
.header {
    background-color: #fff;
    width: 100%;
    height: 90rpx;
    display: flex;
    justify-content: space-evenly;
    line-height: 90rpx;
    font-size: 28rpx;
}

.act {
    border-bottom: 2;
    padding-bottom: 26rpx;
    color: #b79547;
    border-bottom: 6rpx solid;
    border-bottom-color: linear-gradient(to right, #bda54f, #9e722d);
    border-radius: 4rpx;
}

.main-list {
    background-color: #fff;
    display: flex;
    margin-top: 22rpx;
    height: 194rpx;
    padding-top: 30rpx;
    color: #242424;
}

.main-left {
    margin-left: 30rpx;
    margin-right: 20rpx;
}

.main-left image {
    width: 164rpx;
    height: 164rpx;
}

.main-right {
    width: 480rpx;

}

/* 超出隐藏 显示省略号 */
.main-title {
    width: 480rpx;
    font-size: 30rpx;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    word-break: break-all;
}

.main-attr {
    display: flex;
    font-size: 28rpx;
    color: #A3A3A3;
    margin-top: 20rpx;
}

.main-stock {
    display: flex;
    padding: 0 30rpx 0 30rpx;
    height: 102rpx;
    background-color: #fff;
    justify-content: space-between;
    font-size: 28rpx;
    line-height: 102rpx;
    border-top: 2rpx solid #F5F5F5;
}
/* 待入库 */
.pending{ 
    color: #A3A3A3;
}
/* 完成 */
.success{
    color: #F63256;
}