<!--库存详情页-->
<view class="header" bindtap="stocklogbind">
	<view class="header-left">
		<image src="../../images/lll.jpg"></image>
	</view>
	<view class="header-right">
		<text>哈哈哈哈哈哈哈</text>
		<text class="jian">1000件</text>
	</view>
</view>
<view class="attr">
	<view class="attr-list" wx:for="{{goodslist}}" wx:key="listkey">
		<view class="attr-item line">
			<view>{{item.name}}</view>
			<view>{{item.num}}件</view>
		</view>
		<view class="attr-item" wx:for="{{item.attr}}" wx:for-index="itemkey" wx:for-item="itemattr" wx:key="itemkey">
			<view>{{itemattr.name}}</view>
			<view wx:if="{{!isedit}}">{{itemattr.num}}件</view>
			<view class="btn-box" wx:else>
				<view wx:if="{{itemattr.num > 0}}" class="jiannum" bindtap="numminus" data-good_key="{{index}}" data-attr_key="{{itemkey}}">-</view>
				<input placeholder-class="num" type="number" value="{{itemattr.num}}"  data-good_key="{{index}}" data-attr_key="{{itemkey}}" bindblur="inputeditstock" bindconfirm="inputeditstock"></input>
				<view class="jia" bindtap="numadd" data-good_key="{{index}}" data-attr_key="{{itemkey}}">+</view>
			</view>
		</view>
	</view>
</view>
<view class="foot" bindtap="editbind">
	<text wx:if="{{!isedit}}">修改库存</text>
	<text wx:else>保存修改</text>
</view>