
.header{
    background-color: #fff;
    display: flex;
    width: 100%;
    height: 196rpx;
    padding: 30rpx;

}
.header-left{
    display: flex;
    margin-right: 20rpx;
}
.header-left image{
    height: 196rpx;
    width: 196rpx;
}
.jian{
    color: #B79547;
}
.header-right{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.attr-list{
    color: #333333;
    margin-top: 20rpx;
    background-color: #fff;
    font-size: 28rpx;
}
.attr-item{
    display: flex;
    justify-content: space-between;
    margin-left: 30rpx;
    margin-right: 30rpx;
    height: 80rpx;
    line-height: 80rpx;
}
.attr-item.line{
    color: #666666;
    border-bottom: 2rpx solid #F5F5F5;
}
.foot{
    font-size: 32rpx;
    color: #fff;
    background-image: linear-gradient(to right, #bda54f, #9e722d);
    height: 98rpx;
    line-height: 98rpx;
    text-align: center;
    position: fixed;
    bottom: 0rpx;
    width: 100%;
}
/* 加减号样式 */
.btn-box{
    margin-top: 18rpx;
    display: flex;
    height: 44rpx;
    line-height: 44rpx;
    border: 2rpx solid rgba(230,230,230,1);
    text-align: center;

}
.btn-box input{
    height: 40rpx;
    line-height: 40rpx;
    width: 70rpx;
    text-align: center;
}
.jiannum {
    color: #E6E6E6;
    height: 44rpx;
    width: 44rpx;
    line-height: 44rpx;
    border-right:2rpx solid rgba(230,230,230,1);
}.jia{
    height: 44rpx;
    width: 44rpx;
    line-height: 44rpx;
    border-left:2rpx solid rgba(230,230,230,1);
}
/* end */