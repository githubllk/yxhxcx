<view wx:if="{{type=='list'}}">
	<view class="main" bindtap="editbind" data-id="1">
		<view class="left">新品上架</view>
		<view class="right">
			<view>15种商品</view>
			<image src="../../images/del.png" catchtap="delbind"></image>
		</view>
	</view>
	<view class="main">
		<view class="left">新品上架</view>
		<view class="right">
			<view>15种商品</view>
			<image src="../../images/del.png"></image>
		</view>
	</view>
</view>
<view wx:elif="{{type=='add'}}">
	<view class="main add">
		<view class="left">名称</view>
		<view class="right">
			<input placeholder="请输入"></input>
		</view>
	</view>
</view>
<view wx:elif="{{type=='edit'}}">
	<view class="main add">
		<view class="left">名称</view>
		<view class="right">
			<input placeholder="{{name?name:'请输入'}}"></input>
		</view>
	</view>
</view>
<view class="foot" bindtap="addclassifybind">
	<text>{{type=='list'?'添加分类':'确认'}}</text>
</view>