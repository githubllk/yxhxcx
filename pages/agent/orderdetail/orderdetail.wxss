/* pages/agent/orderdetail/orderdetail.wxss */
page {
    width: 100%;
}

.header {
    display: flex;
    height: 120rpx;
    margin-top: 20rpx;
}

.left {
    margin: 0 30rpx 0 30rpx;
    line-height: 120rpx;
}

.left image {
    width: 44rpx;
    height: 44rpx;
}

.right {
    width: 100%;
    align-items: center;
    margin-top: 16rpx;
}

.top {
    display: flex;
    justify-content: space-between;
    margin-right: 30rpx;
}

.top .sk {
    color: #B79547;
    font-weight: 500;
}

.top .time {
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(163, 163, 163, 1);
}

.down {
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
}

.right1 {
    margin-top: 16rpx;
    width: 100%;
    color: rgba(36, 36, 36, 1);
    font-size: 28rpx;
}

.right1 .top1 {
    display: flex;
}

.mobile {
    margin-left: 80rpx;
}

.addr {
    font-size: 24rpx;
    color: rgba(163, 163, 163, 1);
}


.order-sn {
    height: 82rpx;
    line-height: 82rpx;
    margin-top: 20rpx;
    color: #A3A3A3;
    font-size: 24rpx;
    padding-left: 30rpx;
}

.main-list {
    display: flex;
    margin-top: 2rpx;
    height: 194rpx;
    padding-top: 30rpx;
    color: #242424;
}

.main-left {
    margin-left: 30rpx;
    margin-right: 20rpx;
}

.main-left image {
    width: 164rpx;
    height: 164rpx;
}

.main-right {
    width: 480rpx;

}

/* 超出隐藏 显示省略号 */
.main-title {
    width: 480rpx;
    font-size: 30rpx;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    word-break: break-all;
}

.main-attr {
    display: flex;
    color: #A3A3A3;
    margin-top: 20rpx;
    font-size: 26rpx;

}

.main-attr.bom {
    justify-content: space-between;
}

.price {
    font-size: 32rpx;
    color: #F63256;
}

.num {
    color: #242424;
}

.buy-info {
    display: flex;
    height: 100rpx;
    line-height: 100rpx;
    margin-top: 20rpx;
    color: rgba(51, 51, 51, 1);
    font-size: 28rpx;
    justify-content: space-between;
    padding: 0 30rpx 0 30rpx;
}

.order-info {
    margin-top: 20rpx;
    font-size: 28rpx;
    padding-left: 30rpx;
}

.info {
    color: rgba(51, 51, 51, 1);
    padding: 20rpx 0 20rpx;

}

.order-info .time {
    color: rgba(163, 163, 163, 1);
    padding-bottom: 20rpx;
}

.foot {
    display: flex;
    position: fixed;
    justify-content: space-between;
    width: 100%;
    height: 98rpx;
    text-align: center;
    border-top: 2rpx #eeeeee solid;
    display: flex;
    z-index: 2000;
    bottom: 0;

}

.cancel {
    width: 50%;
    line-height: 98rpx;
    color: #B79547;
}

.confirm {
    width: 50%;
    line-height: 98rpx;
    color: #fff;
    background-image: linear-gradient(to right, #bda54f, #9e722d);
}


/* 选择组件 */
.picker-view {
    height: 376rpx;
    width: 100%;
}

picker-view {
    background-color: #fff;
    padding: 0;
    width: 100%;
    height: 376rpx;
    bottom: 0;
    position: fixed;
    z-index: 9999;
}

picker-view-column view {
    vertical-align: middle;
    font-size: 34rpx;
    line-height: 24rpx;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.shadow {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0rpx;
    background-color: #0000004D;
}

.wuliu-top1{
    width: 580rpx;
    font-size:28rpx;
    color: #242424;
}
.wuliu-time{
    color: #BDBDBD;
    font-size:24rpx;
}

.foot1{
    font-size: 32rpx;
    color: #fff;
    background-image: linear-gradient(to right, #bda54f, #9e722d);
    height: 98rpx;
    line-height: 98rpx;
    text-align: center;
    position: fixed;
    bottom: 0rpx;
    width: 100%;
  }