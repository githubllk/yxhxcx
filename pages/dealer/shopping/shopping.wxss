/* pages/dealer/shopping/shopping.wxss */
.z-kong {
    text-align: center;
    font-size: 28rpx;
}

.kong {
    margin: 192rpx 0 54rpx;
}

.kong image {
    width: 396rpx;
    height: 162rpx;
}

.font {
    width: 750rpx;
    margin: 0 auto;
}

.s-btn {
    width: 394rpx;
    height: 74rpx;
    border-radius: 8rpx;
    border: 2rpx solid rgba(183, 149, 71, 1);
    margin: 0 auto;
    line-height: 74rpx;
    color: #B79547;
    margin-top: 52rpx;
}
/* ---------- */

.a-left {
    margin-left: 30rpx;
    line-height: 194rpx;
}

.a-left image {
    width: 40rpx;
    height: 40rpx;
}
.main-list {
    display: flex;
    margin-top: 2rpx;
    height: 194rpx;
    padding-top: 30rpx;
    color: #242424;
}

.main-left {
    margin-left: 30rpx;
    margin-right: 20rpx;
}

.main-left image {
    width: 164rpx;
    height: 164rpx;
}

.main-right {
    width: 480rpx;

}

/* 超出隐藏 显示省略号 */
.main-title {
    width: 480rpx;
    font-size: 30rpx;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    word-break: break-all;
}
.main-attr {
    display: flex;
    color: #A3A3A3;
    margin-top: 20rpx;
    font-size:26rpx;
    position: relative;
}
.bom image{
    width: 28rpx;
    height: 28rpx;
    position: absolute;
    right: 30rpx;
    margin-top: 24rpx;
}
.attr-g{
    margin-left: 30rpx;
}
/* 加减号样式 */
.btn-box{
    display: flex;
    height: 44rpx;
    line-height: 44rpx;
    border: 2rpx solid rgba(230,230,230,1);
    text-align: center;
    position: absolute;
    right: 30rpx;
}
.btn-box label{
    height: 40rpx;
    line-height: 40rpx;
    width: 70rpx;
    text-align: center;
}
.jiannum {
    color: #ccc;
    height: 44rpx;
    width: 44rpx;
    line-height: 44rpx;
    border-right:2rpx solid rgba(230,230,230,1);
    font-size: 35rpx;
}.jia{
    height: 44rpx;
    width: 44rpx;
    line-height: 44rpx;
    border-left:2rpx solid rgba(230,230,230,1);
}

.foot {
    display: flex;
    position: fixed;
    justify-content: space-between;
    width: 100%;
    height: 98rpx;
    border-top: 2rpx #eeeeee solid;
    display: flex;
    z-index: 2000;
    bottom: 100rpx;

}

.cancel {
    width: 518rpx;
    line-height:90rpx;
    color: #B79547;
    display: flex;
}

.confirm {
    line-height: 98rpx;
    width: 232rpx;
    color: #fff;
    text-align: center;
    background-image: linear-gradient(to right, #bda54f, #9e722d);
}

.quanxuan{
    margin-left: 30rpx;
    line-height: 110rpx;
}
.quanxuan image{
    width: 40rpx;
    height: 40rpx;
}
.qx-text{
    color: #A3A3A3;
    font-size: 28rpx;
    margin-left: 14rpx;
}
.heji{
    margin-left: 100rpx;
}

