/* pages/dealer/orderdetail/orderdetail.wxss */
.addr {
    display: flex;
    height: 108rpx;
    line-height: 108rpx;
    padding-left: 30rpx;
    font-size: 28rpx;
    position: relative;

}

.addr-detail {
    color: #BDBDBD;
    margin-left: 14rpx;
}

.o-left image {
    width: 36rpx;
    height: 44rpx;
    padding-top: 32rpx;
}

.o-right {
    position: absolute;
    right: 30rpx;
}

.o-right image {
    width: 25rpx;
    height: 25rpx;
}


.main-list {
    background-color: #fff;
    display: flex;
    height: 194rpx;
    padding-top: 30rpx;
    color: #242424;
}

.main-left {
    margin-left: 30rpx;
    margin-right: 20rpx;
}

.main-left image {
    width: 164rpx;
    height: 164rpx;
}

.main-right {
    width: 480rpx;

}

/* 超出隐藏 显示省略号 */
.main-title {
    width: 480rpx;
    font-size: 30rpx;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    word-break: break-all;
}

.main-attr {
    display: flex;
    font-size: 28rpx;
    color: #A3A3A3;
    margin-top: 20rpx;
}

.l30 {
    margin-left: 30rpx;
}

.attr-piece {
    color: #B79547;
}

.order-sn {
    height: 82rpx;
    line-height: 82rpx;
    margin-top: 20rpx;
    color: #A3A3A3;
    font-size: 24rpx;
    padding-left: 30rpx;
}

.foot {
    display: flex;
    position: fixed;
    bottom: 0rpx;
    justify-content: space-between;
    width: 100%;
    height: 98rpx;
    text-align: center;
    border-top: 2rpx #eeeeee solid;
    background: #fff;
}

.fenlei {
    width: 50%;
    line-height: 98rpx;
    color: #666666;
}

.addgood {
    width: 50%;
    line-height: 98rpx;
    color: #fff;
    background-image: linear-gradient(to right, #bda54f, #9e722d);
}