}
.main-top image{
    margin-right: 30rpx;
}
.clear{
    width: 394rpx;
    height: 74rpx;
    margin: 80rpx 0 0 170rpx;
    text-align: center;
    line-height: 74rpx;
    color: #7A7A7A;
    font-size: 28rpx;
}

.nodata image{
    width: 369rpx;
    height: 224rpx;
    margin: 52rpx 0 0 176rpx;
}
.nodata text{
    margin: 40rpx 0 0 264rpx;
    font-size:28rpx;
}

.d-good{
    display: flex;
    width: 100%;
    height: 196rpx;
    padding: 30rpx;
    position: relative;
    color: #242424;
}
.d-good-left{
    display: flex;
    margin-right: 20rpx;
}
.d-good-left image{
    height: 196rpx;
