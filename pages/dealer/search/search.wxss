.d-header{
    display: flex;   
}
.search {
    height: 60rpx;
    display: flex;
    margin-left: 54rpx;
    line-height: 60rpx;
    width: 554rpx;
    background: rgba(247, 247, 247, 1);
    border-radius: 8rpx;
    margin-top: 20rpx;
}
.search-left{
    margin: 6rpx 14rpx 0 20rpx;
}
.search-right{
    margin-top: 10rpx;
}

.search image {
    width: 30rpx;
    height: 30rpx;
}
.search input{
    color: #999999;
    font-size: 28rpx;
}
.search-btn{
    color: #242424;
    margin: 28rpx 0 0 24rpx;
}



.top{
    height: 88rpx;
    line-height: 88rpx;
    font-size: 28rpx;
}
.c6{
    color: #666666;
    margin-left: 30rpx;
}
.main-top{
    display: flex;
    justify-content: space-between;
}
.main{
    color: #242424;
    padding-left: 30rpx;
   
